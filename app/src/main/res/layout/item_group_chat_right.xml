<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="4dp"
    android:id="@+id/rl_group">

    <!--region right side-->
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_bg_outgoing_bubble"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingRight="20dp"
        android:paddingBottom="12dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:paddingRight="14dp"
            android:text="01:22 PM"
            android:layout_marginBottom="3dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/md_blue_900"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_name_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:paddingRight="14dp"
            android:text="01:22 PM"
            android:textSize="11sp"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rl_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <!--region text right-->
            <LinearLayout
                android:id="@+id/ll_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_reply_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@color/transparent_white"
                    android:padding="5dp"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/txtQuotedMsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_toLeftOf="@+id/iv_preview"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtQuotedMsgType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_below="@+id/txtQuotedMsg"
                        android:layout_toLeftOf="@+id/iv_preview"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/iv_preview"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        android:layout_marginRight="8dp"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:autoLink="web"
                    android:gravity="left"
                    android:paddingBottom="5dp"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp" />

            </LinearLayout>
            <!--endregion-->

            <!--region link right-->
            <LinearLayout
                android:id="@+id/ll_link"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:visibility="gone">


                <!--default view or whatsapp -->
                <io.github.ponnamkarthik.richlinkpreview.RichLinkView
                    android:id="@+id/richLinkView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>
            <!--endregion-->

            <!--region image right-->
            <RelativeLayout
                android:id="@+id/rl_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/corner_common_border_gray"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/ll_img_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="8dp"
                    android:background="@drawable/corner_common_border_transparent"
                    android:padding="5dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:paddingRight="8dp">

                    <ProgressBar
                        android:id="@+id/pb_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_sizeImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_vertical_align_bottom"
                        android:text="20mb"
                        android:textColor="@color/white"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>
            <!--endregion-->

            <!--region video right-->
            <RelativeLayout
                android:id="@+id/ll_video"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/corner_common_border_gray"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/corner_common_border_gray" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play_button" />

                <LinearLayout
                    android:id="@+id/ll_file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"
                    android:background="@drawable/corner_common_border_transparent"
                    android:padding="5dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:paddingRight="8dp">

                    <ProgressBar
                        android:id="@+id/pb_video"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_vertical_align_bottom"
                        android:text="20mb"
                        android:textColor="@color/white"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        />

                </LinearLayout>
            </RelativeLayout>
            <!--endregion-->

            <!--region audio right-->
            <RelativeLayout
                android:id="@+id/ll_audio"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rl_playPause"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/iv_play"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:tint="@color/grey_60"
                        android:src="@drawable/ic_play_arrow" />

                    <ProgressBar
                        android:id="@+id/pb_audio"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_pause"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/ic_pause"
                        android:visibility="gone" />

                </RelativeLayout>

                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_toLeftOf="@+id/rl_gifLayout"
                    android:layout_toRightOf="@+id/rl_playPause" />


                <RelativeLayout
                    android:id="@+id/rl_gifLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorAccent"
                    android:padding="5dp"

                    >

                    <ImageView
                        android:id="@+id/iv_gif"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_headset" />

                    <TextView
                        android:id="@+id/tv_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_gif"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:text="0.6"
                        android:textColor="@color/colorBlack"
                        android:textSize="10sp" />

                </RelativeLayout>

            </RelativeLayout>
            <!--endregion-->

            <!--region document view left-->
            <RelativeLayout
                android:id="@+id/rl_pdf"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:background="@color/transparent_white"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_report"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:id="@+id/tv_tv_docName"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/iv_icon"
                    android:layout_toLeftOf="@+id/iv_sizeDoc"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    />

                <ImageView
                    android:id="@+id/iv_sizeDoc"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_vertical_align_bottom"
                    android:tint="@color/black"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <ProgressBar
                    android:id="@+id/pb_doc"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_docExtention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_icon"
                    android:text="xml"
                    android:textSize="10sp"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>
            <!--endregion-->

            <!--region contacts-->
            <LinearLayout
                android:id="@+id/ll_contact"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_account_circle"
                        />

                    <TextView
                        android:id="@+id/tv_contactMsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="fjrfj"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_navi_blue"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.75dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/grey_40"/>

                <TextView
                    android:id="@+id/tv_viewContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Contact"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textColor="@color/color_navi_blue"/>




            </LinearLayout>
            <!--endregion-->

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_msg"
            android:layout_gravity="bottom|right"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:drawableRight="@drawable/ic_double_tick_indicator"
            android:drawablePadding="8dp"
            android:paddingRight="14dp"
            android:paddingBottom="8dp"
            android:text="01:22 PM"
            android:textColor="@color/colorBlack"
            android:textSize="11sp"

            />


    </LinearLayout>
    <!--endregion-->


</RelativeLayout>
